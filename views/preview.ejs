<!DOCTYPE html>
<html>
    <head>
			<meta charset="UTF-8">
			<title><%= title %></title>
			<% include head %>

			<!-- Load c3.css -->
			<link href="stylesheets/c3.css" rel="stylesheet" type="text/css">

			<!-- Load d3.js and c3.js -->
			<script src="javascripts/d3.min.js"></script>
			<script src="javascripts/c3.min.js"></script>
			<script type="text/javascript" src="javascripts/jquery-csv.js"></script>
			<script type="text/javascript" src="https://www.google.com/jsapi"></script>
			<style type="text/css">
			.alerterror, .alertsuccess, .alertinfo {
				width: auto;
				padding: 10px 10px;
				text-align: center;
				background-color: #c0392b;
				margin: 5px 0 10px;
			}
			button.close {
				margin: -40px 10px 0 0;
			}

			.error{
				color:red;
			}

			.modal-body button.close {
				margin: 0;
			}
			
		</style>

    </head>
    <div class="messages main_wrapper">
				<% if (message.length > 1) { %>
						<div class="alerterror"><%= message %></div>
						<button class="close">&times</button>
				<% } %>

				<% if (req.session.status_message > 1) { %>
						<div class="info"><%= message %></div>
						<button class="close">&times</button>
				<% } %>

				
			</div>
			

    <body >
		<!-- top bar -->
		<% include header_content %>
		
		<!-- main content -->
		<div id="main_wrapper">
			<div class="page_content">
				<div class="container-fluid">
				<%= req.session.status_message %>
					<!--<div id="wait" style="display: none;" ></div>-->

					<% include body_header %>

					<div class="row">

						<% include timeline_graph %>

					</div>

					<div class="row">
					
						<% include word_cloud %>

					</div>

					<div class="row">

						<% include top_posts %>
						
						<% include sentiment_graph %>
						
					</div>

					<div class="row">
						
						<% include some_positive %>

						<% include some_negative %>
						
					</div>					

					<div class="row">
						
						<% include recent_users %>

						<% include most_influencers %>

					</div>

					<div class="row">
					
						<% include geo_location %>

					</div>

				</div>
			</div>		
		</div>

		<!-- side navigation -->
		<% include side_navigation %>

		<!-- bootstrap js plugins -->
		<script src="assets/bootstrap/js/bootstrap.min.js"></script>
		<!-- top dropdown navigation -->
		<script src="assets/js/tinynav.js"></script>		
	
		<!-- style switcher -->
		<script src="assets/js/tisa_style_switcher.js"></script>

		<script type="text/javascript">
		$(function() {
			$('button.close').on("click", function(){
				$(this).hide();
		    $('div.alerterror').hide();
		  });
		  $('.modal-body button.close').on("click", function(){
				$(this).show();
		  });

		  //showModelBox();

		  function showModelBox(){
		  	$(".search_btn_click").trigger( "click" );
		  }

		})
		</script>
		
    </body>
</html>