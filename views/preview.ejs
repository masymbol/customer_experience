<!DOCTYPE html>
<html>
    <head>
			<meta charset="UTF-8">
			<title>Masymbol</title>
			<% include head %>

			<!-- Load c3.css -->
			<link href="stylesheets/c3.css" rel="stylesheet" type="text/css">

			<!-- Load d3.js and c3.js -->
			<script src="javascripts/d3.min.js"></script>
			<script src="javascripts/c3.min.js"></script>
			<script type="text/javascript" src="javascripts/jquery-csv.js"></script>
			<script type="text/javascript" src="https://www.google.com/jsapi"></script>
			<style type="text/css">
			.alerterror, .alertsuccess, .alertinfo {
				width: auto;
				padding: 10px 10px;
				text-align: center;
				background-color: #c0392b;
				margin: 5px 0 10px;
			}
			button.close {
				margin: -40px 10px 0 0;
			}

			.error{
				color:red;
			}
			
		</style>

    </head>
    <div class="messages main_wrapper">
				<% if (message.length > 1) { %>
						<div class="alerterror"><%= message %></div>
						<button class="close">&times</button>
					<% } %>
			</div>
			

    <body onload="showLoader()">
		<!-- top bar -->
		<% include header_content %>
		
		<!-- main content -->
		<div id="main_wrapper">
			<div class="page_content">
				<div class="container-fluid">
					<div id="wait" style="display: none;" ></div>
					<div class="row">
						<div class="col-lg-3 col-md-6">
							<div class="panel panel-default">
								<div class="stat_box stat_up">
									<div class="stat_ico color_f"><i class="ion-ios7-chatboxes-outline"></i></div>
									<div class="stat_content">
										<span class="stat_count">300</span>
										<span class="stat_name">Comments</span>
									</div>
								</div>
							</div>
						</div>

						<div class="col-lg-3 col-md-6">
							<div class="panel panel-default">
								<div class="stat_box stat_up">
									<div class="stat_ico color_g"><i class="ion-ios7-cart-outline"></i></div>
									<div class="stat_content">
										<span class="stat_count">$81 483.00</span>
										<span class="stat_name">Sale (last month)</span>
									</div>
								</div>
							</div>
						</div>

						<div class="col-lg-3 col-md-6">
							<div class="panel panel-default">
								<div class="stat_box stat_down">
									<div class="stat_ico color_a"><i class="ion-clipboard"></i></div>
									<div class="stat_content">
										<span class="stat_count">637</span>
										<span class="stat_name">Tasks</span>
									</div>
								</div>
							</div>
						</div>

						<div class="col-lg-3 col-md-6">
							<div class="panel panel-default">
								<div class="stat_content">
									<div class="stat_box">
										<form method="POST" action="/google_search">
											<div class="input-group search-container">
												<input class="form-control" name="search" id="search-text" type="text" placeholder = "Enter a search text">
												<span class="input-group-btn">
													<input id="btn_search_submit" value="Search" class="btn btn-primary" type="submit"></input>
												</span>
											</div>
										</form>
										<div id="searching_info">										
											<% if (search_query != undefined) { %>
											<b> Search Results for <%= search_query %> .. </b>
											<% } %>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class="row">

						<% include timeline_graph %>

						<% include top_posts %>
						
					</div>

					<div class="row">
						<% include word_cloud %>
						
						<% include sentiment_graph %>

					</div>					

					<div class="row">
						
						<% include some_positive %>

						<% include some_negative %>
						
					</div>					

					<div class="row">
						
						<% include recent_users %>

						<% include most_influencers %>

					</div>

					<div class="row">
					
						<% include geo_location %>

					</div>

				</div>
			</div>		
		</div>

		<!-- side navigation -->
		<% include side_navigation %>

		<!-- bootstrap js plugins -->
		<script src="assets/bootstrap/js/bootstrap.min.js"></script>
		<!-- top dropdown navigation -->
		<script src="assets/js/tinynav.js"></script>		
	
		<!-- style switcher -->
		<script src="assets/js/tisa_style_switcher.js"></script>

		<script type="text/javascript">
		$(function() {
			$('button.close').on("click", function(){
				$(this).hide();
		    $('div.alerterror').hide();
		  });
		})
		</script>
		
    </body>
</html>