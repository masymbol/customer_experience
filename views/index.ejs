<!DOCTYPE html>
<html>
    <head>
		<meta charset="UTF-8">
		<title><%= title %></title>
		<% include head %>
		<style type="text/css">
			.alerterror, .alertsuccess, .alertinfo {
				width: auto;
				padding: 10px 10px;
				text-align: center;
				background-color: #c0392b;
				margin: 5px 0 10px;
			}
			button.close {
				margin: -40px 10px 0 0;
			}
			.error{
				color:red;
			}
			
			.vertical-center {
				min-height: 100%;  /* Fallback for browsers do NOT support vh unit */
				min-height: 100vh; /* These two lines are counted as one :-)       */

				display: flex;
				align-items: center;
			}

			.modal-body button.close {
				margin: 0;
			}


		</style>
		<!-- Login stylesheet -->
		<link href="stylesheets/login.css" rel="stylesheet" media="screen">
    </head>
    <body>
		<!-- top bar -->
		<% include header_content %>
		<div class="messages main_wrapper">
				<% if (message.length > 0) { %>
					<div class="alerterror"><%= message %></div>
					<button class="close">&times</button>
				<% } %>
		</div>
		<div class="messages main_wrapper">
				<% if (process_info.length >= 1) { %>
						<div class="alertsuccess"><%= process_info %></div>
						<button class="close">&times</button>
					<% } %>
		</div>
		<!-- main content -->

			<div class="login_container">
			<!--<div id="wait" style="display: none;" ></div>-->
				<div class="panel panel-default" style="margin-top: 10px;">
					<div class="panel-body search-container">
						<div class="col-md-12">
							<h3>Analysis Query</h3>
							<p><b>Desription:</b> Type your desired keyword or search term to get trends in social media.</p>
							<form method="POST" action="/google_search">
								<div class="input-group search-container">
									<input class="form-control" name="search" id="search-text" type="text" placeholder = "Enter a search text">
									<span class="input-group-btn">
										<input id="btn_search_submit" value="Search" class="btn btn-primary" type="submit" data-toggle="modal" data-target="#bs_modal_regular"></input>
									</span>
								</div>
							</form>
						</div>
					</div>
				</div>
				<div class="modal fade" id="bs_modal_regular">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-body">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="padding:0">&times;</button>
								<img src="/images/Loading-Trace-wide.gif" alt="Processing ..." width="84" height="84"align="middle" style="display: block; margin: auto;">	<br/>		
								<p style="text-align: center;">Your Process is Started. It will take time to display result.. </p>
							

						</div>
					</div>
				</div>
			</div>
			</div>

		<!-- side navigation -->
		<% include side_navigation %>

		<!-- bootstrap js plugins -->
		<script src="assets/bootstrap/js/bootstrap.min.js"></script>
		<!-- top dropdown navigation -->
		<script src="assets/js/tinynav.js"></script>		
	
		<!-- style switcher -->
		<script src="assets/js/tisa_style_switcher.js"></script>

		<script type="text/javascript">
		$(function() {
			$('button.close').on("click", function(){
				$(this).hide();
		    $('div.alerterror').hide();
		  });
		})
		</script>
		
    </body>
</html>